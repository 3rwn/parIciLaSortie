{% extends 'base.html.twig' %}

{% block titre %}
    Modifier une sortie
{% endblock %}

{% block body %}
    <div class="container h-25">
    </div>
    <br>
    <div class="mt-5"><h1 class="text-center">Modifier la sortie</h1></div>

{#      <h1 class="text-center">{{ outing.name }}</h1>#}
    <div class=" container my-5 px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center text-white">
    <div class="row">
    <div class="col">
        {{ form_start (formulaire) }}
        <div class="row">
            <div class="col">{{ form_row(formulaire.name) }}</div>
            <div class="col">{{ form_row(formulaire.campus) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(formulaire.dateTimeStartOuting) }}</div>
            <div class="col">{{ form_row(formulaire.duration) }}</div>
        </div>
        <div class="row">
            <div class="col">{{ form_row(formulaire.registrationDeadLine) }}</div>
            <div class="col">{{ form_row(formulaire.maxRegistrations) }}</div>
        </div>
    </div>

    <div class="container">
        <div class="row">

            <div class="col-mb-6 text-white">

                <div class="col-mb-6 text-white">

                    <div class="col">
                    </div>

                </div>

                {{ form_row(formulaire.description) }}

            </div>

            <div class="row mb-3">
                <div class="col">{{ form_row(formulaire.location) }}</div>
                <div class="col">{{ form_row(formulaire.city) }}</div>
                <div class="col-2">
                    <div class="row">
                        <div class="col"></div>
                        <a href="{{ path('create_location') }}">
                            <div class="col-10 mx-auto mt-4 btn btn-secondary"><i class="fa-solid fa-plus"></i></div>
                        </a></div>
                </div>


            </div>

            <div class="row">
                <div class="col-2 "></div>
                <div class="col mx-auto ">{{ form_row(formulaire.enregistrer) }}</div>
                <div class="col mx-auto">{{ form_row(formulaire.saveAndAdd) }}</div>
                <div class="col mx-auto"><a class="btn btn-primary" href="{{ path('outing_delete',{'id':outing.id}) }}">Supprimer</a>
                </div>
                <div class="col"><a class="btn btn-primary" href="{{ path('home') }}">Annuler</a></div>
                {{ form_end (formulaire) }}
            </div>

        </div>
    </div>

    <div class="container mb-5">

    </div>
{% endblock %}