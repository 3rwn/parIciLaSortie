{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Identifiez-vous</h1>
    <label for="inputId" class="text-white">Identifiant</label>
    <input type="text" value="{{ last_username }}" name="identifiant" id="inputId" class="form-control" autocomplete="identifiant" required autofocus>
    <label for="inputPassword" class="text-white">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


{#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
{#        See https://symfony.com/doc/current/security/remember_me.html#}

        <div class="checkbox mb-3" >
            <label>
                <input type="checkbox" name="_remember_me" > <span class="text-white">Se souvenir de moi</span>
            </label>
        </div>


    <button class="btn btn-lg btn-secondary" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
